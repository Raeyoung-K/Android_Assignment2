<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".KabaddiFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/teamA"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Team A"
            android:textAlignment="center"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"/>

        <TextView
            android:id="@+id/teamAScore"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            tools:text="0"
            android:textAlignment="center"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/teamA"/>

        <Button
            android:id="@+id/teamAplus1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/verticalLine"
            app:layout_constraintTop_toBottomOf="@id/teamAScore"
            android:layout_marginTop="10dp"
            android:text="+1"/>

        <Button
            android:id="@+id/teamAplus2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/verticalLine"
            app:layout_constraintTop_toBottomOf="@id/teamAplus1"
            android:layout_marginTop="10dp"
            android:text="+2"/>


        <View
            android:id="@+id/verticalLine"
            android:layout_width="2dp"
            android:layout_height="300dp"
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/teamA"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="5dp" />


        <TextView
            android:id="@+id/teamB"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:textAlignment="center"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"/>

        <TextView
            android:id="@+id/teamBScore"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            tools:text="0"
            android:textAlignment="center"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/teamB"/>

        <Button
            android:id="@+id/teamBplus1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/verticalLine"
            app:layout_constraintTop_toBottomOf="@id/teamBScore"
            android:layout_marginTop="10dp"
            android:text="+1"/>

        <Button
            android:id="@+id/teamBplus2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/verticalLine"
            app:layout_constraintTop_toBottomOf="@id/teamBplus1"
            android:layout_marginTop="10dp"
            android:text="+2"/>

        <Button
            android:id="@+id/resetButton"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verticalLine"
            android:layout_marginTop="20dp"
            android:text="reset"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>